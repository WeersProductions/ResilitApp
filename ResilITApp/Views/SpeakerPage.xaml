<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ResilITApp.Views.SpeakerPage"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    BackgroundInputTransparent="False">
    <StackLayout
        Margin="10, 10, 10, 10"
        Padding="10, 10, 10, 10"
        BackgroundColor="white">
        <Label Text="{Binding name}" StyleClass="speakerName"/>
        <ScrollView>
            <Label Text="{Binding fullDescription}" StyleClass="speakerDescription"/>
        </ScrollView>
        <Button Margin="10" Command="{Binding closeCommand}" Text="Close"/>
    </StackLayout>
</pages:PopupPage>
